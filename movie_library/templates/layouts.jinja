{% from "macros/nav.jinja" import header %}
{% from "macros/footer.jinja" import footer %}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{title | default('Movie Watchlist')}}</title>
    <link rel="icon" type="image/x-icon" href="{{ url_for('static', filename='img/movie.ico') }}">
    <link href="https://fonts.googleapis.com/css?family=Public+Sans:400,600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="{{ url_for('static', filename='css/reset.css') }}" />
    <link rel="stylesheet" href="{{ url_for('static', filename='css/main.css') }}" />

    {% block head_content %}

    {% endblock head_content %}

</head>

<body>
    {{header(session.get("email"),session.get("theme"))}}

    <main class="main">
        {% block main_content %}

        {% endblock main_content %}</main>

    {{footer()}}

</body>

</html>