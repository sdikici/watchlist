{% from "macros/fields.jinja" import render_text_field%}
{% from "macros/svgs.jinja" import search %}

{% extends "layouts.jinja" %}

{% block head_content %}
<link rel="stylesheet" href="{{url_for('static', filename='css/forms.css')}}">
{% endblock head_content %}

{% block main_content %}



<form name="add_movie" method="post" , novalidate class="form">
    <div class="form__container">
        <p>
            <a class="form__container--search" href="{{url_for('pages.search_movies')}}">Search{{
                search("search")}}</a>
        </p>
        {{form.hidden_tag()}}
        {{render_text_field(form.title)}}
        {{render_text_field(form.director)}}
        {{render_text_field(form.year)}}

        <div>
            {{form.submit(class_="button button--form")}}
        </div>
    </div>

</form>

{% endblock main_content %}